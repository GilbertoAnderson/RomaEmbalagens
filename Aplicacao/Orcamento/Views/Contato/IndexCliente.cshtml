
@{
    Layout = null;
}

<div class="text-left ">
    <a href="@Url.Action("Create","Contato",new { id = @ViewBag.idCliente })"> <input type="button" value="Novo" class="btn btn-primary" /></a>
</div>
<div class="row">


    @if (Model != null)
    {
        @if (Model.Count() > 0)
        {
            @foreach (var contato in Model)
            {

                <div class="card w-80">
                    <div class="card-body">
                        <h3 class="card-title"> @contato.Nome </h3>
                        <p class="card-text">
                            <span>@contato.Email</span>
                            <div style="border:2px">
                                <span>@contato.Celular</span>
                                <span>@contato.dtNascimento</span>
                            </div>

                        </p>
                        <a href="@Url.Action("Edit","Contato", new { id = contato.idContato }) " class="btn btn-secondary">editar ...</a>
                    </div>
                </div>

            }
        }
    }
</div>
