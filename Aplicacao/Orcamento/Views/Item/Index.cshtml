
@{
    ViewData["Title"] = "Item";
}

@model IEnumerable<ItemModel>
<div class="py-5">
    <div class="container">

        <h1>Lista de @ViewBag.Tipo</h1>
        <div class="text-left ">
            <form method="post" asp-action="Index" asp-controller="Item" enctype="multipart/form-data">
                @Html.TextBox("filtro") &nbsp;
                <input type="submit" value="Procurar" class="btn btn-secondary" /> &nbsp;
                <a href="@Url.Action("Create")"> <input type="button" value="Novo" class="btn btn-primary" /></a>
            </form>
        </div>
        <hr />
        <div class="row">


            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {

                        <div class="card w-80">
                            <div class="card-body">
                                <h3 class="card-title"> @item.Nome </h3>
                                <p class="card-text">
                                    <span>@item.Gramatura</span>
                                    <div style="border:2px">
                                        <span>@item.Formato</span>
                                    </div>

                                </p>
                                <a href="@Url.Action("Edit", new { id = item.idItem }) " class="btn btn-secondary">editar ...</a>
                            </div>
                        </div>

                    }
                }
            }
        </div>
    </div>
</div>







