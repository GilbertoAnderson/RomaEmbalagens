

@{
    ViewData["Title"] = "Clientes";
}
@model IEnumerable<ClienteModel>

<div class="py-5">
    <div class="container">


        <h1>Lista de Clientes</h1>
        <form method="post" asp-action="Index" asp-controller="Cliente" enctype="multipart/form-data">
            <row>
                @Html.TextBox("filtro") &nbsp;
                <input type="submit" value="Procurar" class="btn btn-default" /> &nbsp;

                <a href="@Url.Action("Create")"> <input type="button" value="Novo" class="btn btn-primary" /></a>
            </row>
        </form>

        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 g-0">

            @if (Model != null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">Cidade</th>
                            <th scope="col">Bairro</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.Count() > 0)
                        {

                            @foreach (var cliente in Model)
                            {

								<tr>
                                    <td>@cliente.Nome</td>
                                    <td>@cliente.Telefone</td>
                                    <td>@cliente.Cidade</td>
									<td>@cliente.Bairro</td>
                                    <td>
                                        <a href="  @Url.Action("Edit", new { id = cliente.IdCliente  })    " title='Editar'> <i class='glyphicon glyphicon-pencil'> </i></a>&nbsp;
                                    </td>
									
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            }

        </div>



    </div>
</div>
