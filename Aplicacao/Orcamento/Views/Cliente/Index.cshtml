

@{
    ViewData["Title"] = "Clientes";
}

@model IEnumerable<ClienteModel>

<div class="py-5">
    <div class="container">
        <div class="row g-3">
            <div class="col-11">
                <div class="text-left">
                    <h1 class="display-4">Clientes</h1>
                </div>
            </div>
            <div class="col-1">
                <div class="text-left">
                    <a href="  @Url.Action("Index", "Home")   " title='Home' style="text-decoration:none">
                        <h3><i class="bi bi-x-circle-fill" title="Retornar"></i></h3>
                    </a>
                </div>
            </div>
        </div>
        <div class="text-left ">
            <form method="post" asp-action="Index" asp-controller="Cliente" enctype="multipart/form-data">
                @Html.TextBox("filtro") &nbsp;
                <input type="submit" value="Procurar" class="btn btn-secondary" /> &nbsp;
                <a href="@Url.Action("Create")"> <input type="button" value="Novo" class="btn btn-primary" /></a>
            </form>
        </div>
        <hr />
        <div class="row">

            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var cliente in Model)
                    {

                        <div class="card w-80">
                            <div class="card-body">
                                <h3 class="card-title"> @cliente.Nome </h3>
                                <p class="card-text">
                                    <span>@cliente.Telefone</span>
									<div style="border:2px">
										<span>@cliente.Bairro</span> - 
                                        <span>@cliente.Cidade</span>
                                    </div>

                                </p>
                                <a href="@Url.Action("Edit", new { id = cliente.IdCliente  }) " class="btn btn-secondary">editar ...</a>
                            </div>
                        </div>
                        
                    }
                }
            }
        </div>
    </div>
</div>










