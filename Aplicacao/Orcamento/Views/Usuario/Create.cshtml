@using Orcamento.Enums

@{
    ViewData["Title"] = "Novo Usuario";
}
@model Orcamento.Models.UsuarioModel

<div class="py-5">
    <div class="container">

        <h1>Novo Usuario</h1>
        <hr />
        <div class="form-horizontal">
            <form method="post" asp-action="Cadastrar" asp-controller="Usuario" enctype="multipart/form-data">


                <div class="row">
                    <div class="col-lg-4">
                            <div class="mb-1">
                                <label class="form-label mt-3">Nome:</label>
                                <input type="text" asp-for="Nome" class="form-control shadow-none" />
                                <span class="text-danger" asp-asp-validation-for="Nome"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">

                            <div class="mb-1">
                                <label class="form-label mt-3">Email:</label>
                                <input type="text" asp-for="Email" class="form-control shadow-none" />
                                <span class="text-danger" asp-asp-validation-for="Email"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">

                            <div class="mb-1">
                                <label class="form-label mt-3">Celular:</label>
                                <input type="text" asp-for="Celular" class="form-control shadow-none" />
                                <span class="text-danger" asp-asp-validation-for="Celular"></span>
                            </div>

                            <div class="mb-1">
                                <label class="form-label mt-3">Nascimento:</label><br>

                            <label class="form-label mt-3">
                               <input type="date" asp-for="dtNascimento" class="form-control shadow-none" /> 
                            </label>
                                <span class="text-danger" asp-asp-validation-for="dtNascimento"></span>
                            </div>

                    </div>
                </div>

                <div class="row">
		            <div class="col-lg-2">
			            <div class="mb-1">

				            <label class="form-label mt-3">Perfil:</label>
						
                            @Html.DropDownList("idPerfil",
                                     Html.GetEnumSelectList<PerfilEnum>(),
                                     "Selecione o perfil",
                                     new { @class = "form-control" }
                                     )
			            </div>
                    </div>
                </div>

                <hr />
                <row>
                    <a asp-area="" asp-controller="Usuario" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    &nbsp;
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </row>

            </form>

        </div>
    </div>
</div>
