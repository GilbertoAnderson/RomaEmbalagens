
@{
    ViewData["Title"] = "Usuários";
}
@model IEnumerable<UsuarioModel>

<div class="py-5">
    <div class="container">


        <h1>Lista de Usuários</h1>
        <form method="post" asp-action="Index" asp-controller="Usuario" enctype="multipart/form-data">
            <row>
                @Html.TextBox("filtro") &nbsp;
                <input type="submit" value="Procurar" class="btn btn-default" />

                <input type="submit" value="Novo" class="btn btn-primary" asp-action="Create" asp-controller="Usuario" /> &nbsp;
            </row>
        </form>

        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 g-0">

            @if (Model != null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Email</th>
                            <th scope="col">Celular</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.Count() > 0)
                        {

                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>@usuario.Nome</td>
                                    <td>@usuario.Email</td>
                                    <td>@usuario.Celular</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            }

        </div>



    </div>
</div>
